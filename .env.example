# Environment Variables Template for Store24h API
# Copy this file to .env and fill in your actual values
# The docker-compose.yml reads these variables instead of using hardcoded defaults

LISTEN_PORT=80

# Database Configuration (External Services)
MYSQL_USER=your-mysql-user
MYSQL_PASSWORD=your-mysql-password
MYSQL_HOST=your-mysql-host
MYSQL_PORT=3306
MYSQL_DATABASE=your-mysql-database

# MongoDB Configuration (External Service)
MONGO_URL=mongodb://your-mongo-host:27017/your-database?connectTimeoutMS=300000&minPoolSize=100&maxPoolSize=450&maxIdleTimeMS=900000

# Redis Configuration (External Service)
REDIS_HOST=your-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# Hibernate Configuration
HIBERNATE_DDL_AUTO=validate

# Performance Tuning (Optional)
TOMCAT_MAX_THREADS=1000
TOMCAT_ACCEPT_COUNT=1000
TOMCAT_MIN_SPARE_THREADS=1000
TOMCAT_MAX_CONNECTIONS=10000
ASYNC_EXECUTOR_CORE_POOL_SIZE=1000
ASYNC_EXECUTOR_MAX_POOL_SIZE=1000
ASYNC_EXECUTOR_QUEUE_CAPACITY=10000
ASYNC_EXECUTOR_THREAD_NAME_PREFIX=AsyncExecutorThread-
TOMCAT_THREADS_MAX=1000
TOMCAT_THREADS_MIN_SPARE=1000
HIKARI_MINIMUM_IDLE=50

# Java Runtime Options (Note: These are handled in Dockerfile, not as environment variables)
# JAVA_OPTS=-Xms512m -Xmx2g -XX:+UseG1GC -XX:G1HeapRegionSize=16m -XX:+UseStringDeduplication

# Application Configuration
NOT_CRON=true