# Environment Variables Template for Store24h API with Dragonfly
# Copy this file to .env and fill in your actual values
# The docker-compose.yml reads these variables instead of using hardcoded defaults

LISTEN_PORT=80

# Database Configuration (External Services)
MYSQL_USER=your-mysql-user
MYSQL_PASSWORD=your-mysql-password
MYSQL_HOST=your-mysql-host
MYSQL_PORT=3306
MYSQL_DATABASE=your-mysql-database

# MongoDB Configuration (External Service)
MONGO_URL=mongodb://your-mongo-host:27017/your-database?connectTimeoutMS=300000&minPoolSize=100&maxPoolSize=450&maxIdleTimeMS=900000

# Dragonfly Configuration (High Performance Redis Alternative)
DRAGONFLY_HOST=your-dragonfly-host
DRAGONFLY_PORT=6379
DRAGONFLY_PASSWORD=your-dragonfly-password

# Hibernate Configuration
HIBERNATE_DDL_AUTO=validate

# Performance Tuning for t3.2xlarge (8 vCPU, 32GB RAM)
TOMCAT_MAX_THREADS=800
TOMCAT_ACCEPT_COUNT=2000
TOMCAT_MIN_SPARE_THREADS=200
TOMCAT_MAX_CONNECTIONS=20000
ASYNC_EXECUTOR_CORE_POOL_SIZE=200
ASYNC_EXECUTOR_MAX_POOL_SIZE=400
ASYNC_EXECUTOR_QUEUE_CAPACITY=5000
ASYNC_EXECUTOR_THREAD_NAME_PREFIX=WarmupThread-
TOMCAT_THREADS_MAX=800
TOMCAT_THREADS_MIN_SPARE=200
HIKARI_MINIMUM_IDLE=20

# Cache Warming Configuration - Aggressive Intervals
CACHE_WARMING_ENABLED=true
CACHE_WARMING_CHIP_MODEL_ONLINE_RATE=30000
CACHE_WARMING_CHIP_MODEL_RATE=30000
CACHE_WARMING_SMS_MODEL_RATE=30000
CACHE_WARMING_SMS_STRING_MODEL_RATE=30000
CACHE_WARMING_SERVICOS_RATE=60000
CACHE_WARMING_CHIP_NUMBER_CONTROL_RATE=60000
CACHE_WARMING_V_OPERADORAS_RATE=60000
CACHE_WARMING_USERS_RATE=120000
CACHE_WARMING_NUMBERS_RATE=120000
CACHE_WARMING_CONFIGS_RATE=120000
CACHE_WARMING_BALANCE_RATE=300000
CACHE_WARMING_OPERATORS_RATE=120000
CACHE_WARMING_CNC_INCREMENTAL_RATE=30000
CACHE_WARMING_CNC_RECONCILE_RATE=300000
CACHE_WARMING_ALIAS_INCREMENTAL_RATE=30000
CACHE_WARMING_ALIAS_RECONCILE_RATE=300000
CACHE_WARMING_APIKEY_RATE=120000

# Dashboard Configuration
REACT_APP_API_URL=http://localhost:80
REACT_APP_DRAGONFLY_URL=dragonfly://localhost:6379
REACT_APP_DASHBOARD_TITLE=Store24h Warmup Dashboard
REACT_APP_DASHBOARD_SUBTITLE=Dragonfly Performance Monitor

# Java Runtime Options (Note: These are handled in Dockerfile, not as environment variables)
# JAVA_OPTS=-Xms2g -Xmx6g -XX:+UseG1GC -XX:G1HeapRegionSize=16m -XX:+UseStringDeduplication

# Application Configuration
NOT_CRON=true