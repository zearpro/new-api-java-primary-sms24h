# External Service Configuration Template
# Copy this file to .env and update with your actual external service details

# Application Settings
LISTEN_PORT=8080
SPRING_PROFILES_ACTIVE=production

# External MySQL Database Configuration
MYSQL_HOST=your-external-mysql-host.amazonaws.com
MYSQL_PORT=3306
MYSQL_USER=your-mysql-username
MYSQL_PASSWORD=your-mysql-password
MYSQL_DATABASE=your-database-name

# External MongoDB Configuration
# Replace with your external MongoDB connection string
MONGO_URL=mongodb://your-external-mongo-host:27017/ativacoes?connectTimeoutMS=300000&minPoolSize=100&maxPoolSize=450&maxIdleTimeMS=900000

# External Redis Configuration
REDIS_HOST=your-external-redis-host.amazonaws.com
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# Database Settings
HIBERNATE_DDL_AUTO=validate

# Performance Tuning (Optional)
TOMCAT_MAX_THREADS=1000
TOMCAT_ACCEPT_COUNT=1000
TOMCAT_MIN_SPARE_THREADS=1000
TOMCAT_MAX_CONNECTIONS=10000
ASYNC_EXECUTOR_CORE_POOL_SIZE=1000
ASYNC_EXECUTOR_MAX_POOL_SIZE=1000
ASYNC_EXECUTOR_QUEUE_CAPACITY=10000
ASYNC_EXECUTOR_THREAD_NAME_PREFIX=AsyncExecutorThread-
TOMCAT_THREADS_MAX=1000
TOMCAT_THREADS_MIN_SPARE=1000
HIKARI_MINIMUM_IDLE=50
